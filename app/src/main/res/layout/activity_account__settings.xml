<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cybussolutions.bataado.Activities.Account_Settings">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">
    </include>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="3dp"
        android:layout_below="@id/app_bar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile3"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/gray"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_margin="20dp"
        android:layout_below="@id/app_bar"
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile_image"/>
    <View
        android:id="@+id/view"
        android:layout_marginTop="5dp"
        android:layout_below="@id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_margin="20dp"
        android:id="@+id/iconProfile"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/profile"/>
    <TextView
        android:layout_gravity="center_vertical"
        android:id="@+id/profile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_toEndOf="@id/profile_image"
        android:id="@+id/view1"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/iconPassword"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/lock"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_toEndOf="@id/profile_image"
        android:id="@+id/view2"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linear2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/iconProfilePhoto"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/camera"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/profile_photo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Photos"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_toEndOf="@id/profile_image"
        android:id="@+id/view3"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linear3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/linear4"
        android:layout_below="@id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/iconLocation"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/location_icon_profile"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locations"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_toEndOf="@id/profile_image"
        android:id="@+id/view4"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linear4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
</RelativeLayout>
