<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cybussolutions.bataado.Activities.User_Profile"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:background="#eeeeee"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/pp"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentStart="true"
        android:src="@drawable/profile3"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        android:layout_margin="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:id="@+id/username"
        android:layout_alignTop="@+id/pp"
        android:layout_toEndOf="@+id/pp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/firstname"
        android:layout_below="@+id/username"
        android:layout_toEndOf="@+id/pp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:background="@drawable/bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="3"
        android:layout_below="@+id/firstname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp">




        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/freinds_layout"
            >


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ora_friends"
                android:id="@+id/imageView12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/imageView12"
                android:layout_marginTop="5dp"
                android:id="@+id/fr_count" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="FRIENDS"
                android:id="@+id/textView14"
                android:layout_below="@+id/imageView12"
              android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/reviews_layout">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/org_str"
                android:id="@+id/imageView13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/imageView13"
                android:layout_marginTop="5dp"
                android:id="@+id/rw_count" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="REVIEWS"
                android:id="@+id/textView15"
                android:layout_below="@+id/imageView13"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/photos_layout">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/orange_camera"
                android:id="@+id/imageView14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/imageView14"
                android:layout_marginTop="5dp"
                android:id="@+id/ph_count" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PHOTOS"
                android:id="@+id/textView16"
                android:layout_below="@+id/ph_count"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/button"
        android:background="@drawable/add_friend"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:background="@color/White"
        android:layout_below="@+id/button"
        android:layout_marginTop="10dp"
        android:weightSum="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location : "
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cavalry Ground Cannt Lahore"
                android:layout_margin="10dp"
                android:id="@+id/adress_user"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha=".5"
            android:background="@color/LightGrey"

            />

        <RelativeLayout
            android:id="@+id/linearReviews"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rating"
               android:layout_centerVertical="true"/>

            <TextView
                android:layout_toEndOf="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews : "
                android:id="@+id/reviewTextTag"
                android:layout_marginStart="10dp"
               android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_toEndOf="@id/reviewTextTag"
                android:id="@+id/num_reviews_user"
               android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"/>

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/next"
                android:gravity="end"
                android:layout_marginEnd="15dp"
              android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha=".5"
            android:background="@color/LightGrey"

            />

        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/message"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages : "
                android:layout_margin="13dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/num_messages_user"
                android:layout_margin="13dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/next"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="180dp"
                android:id="@+id/imageView11" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha=".5"
            android:background="@color/LightGrey"

            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="My Feeds "
        android:id="@+id/textView18"
        android:textColor="@color/black"
        android:layout_below="@+id/linear_layout"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="5dp" />


</RelativeLayout>



